{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)config.yaml$"
      ],
      "matchStrings": [
        "cloud_template:[\\s\\w:\\-]+name:\\s*(?<depName>.*?)\\s*?hash:\\s*(?<currentValue>.*?)\n"
      ],
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver",
      "packageNameTempalte": "abekila{{{depName}}}"
      "registryUrlTemplate": "https://github.com/abekila/"
    }
    ],
"hostRules": [
 {
  "hostType": "github",
  "matchHost": "https://github.com/abekila/"
 }
]
}
